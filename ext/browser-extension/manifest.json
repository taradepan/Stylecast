{
  "manifest_version": 3,
  "name": "Stylecast",
  "version": "1.0.0",
  "description": "Visual element editor - style any website and send changes to VS Code",
  "author": "Taradepan",
  "homepage_url": "https://github.com/taradepan/stylecast",
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "ws://localhost:47823/*",
    "http://localhost:47823/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/element-inspector.js"],
      "css": ["src/content/element-inspector.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Stylecast",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}